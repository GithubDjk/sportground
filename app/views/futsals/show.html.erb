<div class="jumbotron p-3 p-md-5 text-white rounded" id="futsal-background">
  <div class="col-md-6 px-0">
    <h1 class="display-4 font-italic"> <%= @futsal.name.capitalize %></h1>
  </div>
</div>
<div class="row mb-2">
  <div class="col-md-6">
    <div class="card flex-md-row mb-4 box-shadow h-md-250">
      <div class="card-body d-flex flex-column align-items-start">
        <h3 class="mb-0"> About Futsal </h3>
        <p class="card-text mb-auto"><%= @futsal.bio.capitalize %></p>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card flex-md-row mb-4 box-shadow h-md-250">
      <div class="card-body d-flex flex-column align-items-start">
        <div class="row w-100">
          <div class="col-6">
            <h3 class="mb-0"> General Info: </h3>
          </div>
          <div class="col-6 text-right">
             <!-- Button trigger modal -->
            <button type="button" class="btn btn-sm btn-primary text-white mt-2" data-toggle="modal" data-target="#exampleModalCenter">
              Book Now
            </button>
            <%= form_tag create_payment_method_path do |f| %>
            <%= hidden_field_tag :futsal_id, value: "#{@futsal.id}"%>
              <article>
                <% if flash[:error].present? %>
                <div id="error_explanation">
                  <p><%= flash[:error] %></p>
                </div>
                <% end %>
                <label class="amount">

                </label>
              </article>
              <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    Stripe.setPublishableKey('PUBLISHABLE_KEY');
                    data-key="<%= ENV['stripe_publishable_key'] %>"
                    data-description="A month's subscription"
                    data-amount="100"
                    data-locale="auto">
              </script>

<% end %>
            </div>
        </div>
        <ul class="list-group w-100 mt-3">
          <li class="list-group-item"> <strong>Location:</strong> <%= @futsal.location %></li>
          <li class="list-group-item"> <strong>Owner:</strong>
            <%= @futsal.owner_name %></li>
          <li class="list-group-item"> <strong>Price per Hour:</strong>
            Rs.<%= @futsal.price_per_hour %></li>
          <li class="list-group-item"> <strong>Capacity:</strong>
            <%= @futsal.capacity %></li>
          <li class="list-group-item"> <strong>Contact Number:</strong>
            <%= @futsal.contact_no %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
</div>

<%= render "modal/modal_book"%>

<h3>Booked Table: <h3>
<div class="row mb-2">
          <ul class="list-group">
            <% @bookings.each do |booking| %>
            <li class="col col-12 list-group-item">
              <%= booking.starts_at.localtime.strftime('%Y-%m-%d %H:%M:%S')%> To
              <%= booking.ends_at.localtime.strftime('%Y-%m-%d %H:%M:%S')%> </li>
            <%end%>
          </ul>
</div>
<style>
  #futsal-background {
    background-image: url(<%= url_for(@futsal.profile_picture_url) %>);
    background-size: cover;
    height: 50vh;
  }
</style>