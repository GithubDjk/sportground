<%= form_with(model: futsal) do |form| %>
  <div class="form-group">
    <%= form.text_field :name, autofocus: true , class: "fadeIn second form-control", placeholder: "Name of Futsal" %>
  </div>
  <div class="row">
    <div class="col-sm-6 form-group">
      <%= form.number_field :contact_no, autofocus: true , class: "fadeIn second form-control", placeholder: "98XXXXXXXXXX" %>
    </div>
    <div class="col-sm-6 form-group">
      <%= form.file_field :image, class: 'btn btn-primary-outline'%>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 form-group">
      <%= form.text_field :owner_name, autofocus: true , class: "fadeIn second form-control", placeholder: "Futsal Owner's Name"%>
    </div>
    <div class="col-sm-6 form-group">
      <%= form.text_field :location, autofocus: true , class: "fadeIn second form-control", placeholder: "Location" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 form-group">
      <%= form.number_field :price_per_hour, autofocus: true , class: "fadeIn second form-control", placeholder: "Price Per Hour per person"  %>
    </div>
    <div class="col-sm-6 form-group">
      <%= form.number_field :capacity, autofocus: true , class: "fadeIn second form-control", placeholder: "No of Players Capacity"  %>
    </div>
  </div>
  <div class="form-group">
    <%= form.text_area :bio, autofocus: true , class: "fadeIn second form-control", placeholder: "Description About the Futsal" %>
  </div>
  <%= form.submit "#{new ? 'Register' : 'Update Futsal'}", :class => 'btn btn-lg col-12 btn-primary' %>
<% end %>
